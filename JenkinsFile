pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/andrezuu/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm -g install yarn'
                sh 'yarn install'
                sh 'apt-get update && apt-get install -y libgtk2.0-0 libgtk-3-0 libgbm-dev libnotify-dev libnss3 libxss1 libasound2 libxtst6 xauth xvfb'
            }
        }
        stage('Build') {
            steps {
                sh 'yarn build'
            }
        }
        stage('Cypress tests') {
            steps {
                sh 'xvfb-run --auto-servernum -- npx cypress run'
            }
        }
    }
}