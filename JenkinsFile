pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/andrezuu/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm -g install yarn'
                sh 'yarn install'
            }
        }
        stage('Build') {
            steps {
                sh 'yarn build'
            }
        }
        stage('Cypress tests') {
            steps {
                sh 'yarn cypress:run'
            }
        }
    }
}